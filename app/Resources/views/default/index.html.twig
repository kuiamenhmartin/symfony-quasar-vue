{% extends 'base.html.twig' %}

{% block title %} QuasarApp-UMD {% endblock %}

{% block body %}
  <div id="q-app">
      <q-layout view="lHh Lpr fff">
        <q-layout-header>
          <q-toolbar>
            <q-btn flat round dense @click="drawerState = !drawerState" icon="menu"></q-btn>

            <toolbar-title></toolbar-title>
          </q-toolbar>
        </q-layout-header>

        <q-layout-drawer
          v-model="drawerState"
          :content-class="$q.theme === 'mat' ? 'bg-grey-3' : null">       
        </q-layout-drawer>

      <q-page-container>
        <my-page 
        :editorModel="editorModel" 
        :ratingModel="ratingModel"
        :progressBuffer="progressBuffer"
        :buffer="buffer"
        :visible="visible"
        :simple="simple"
        :stars="stars"></my-page>
        {% include 'quasar_components/components.html.twig' %}

      </q-page-container>
    </q-layout>

    

  </div> {# End of q-app #} 

{% endblock %}

{% block javascripts %}

  {{- parent() -}}

  {% javascripts '@AppBundle/Resources/app/backoffice/main.js' %}                         
      <script src="{{ asset_url }}"></script>
  {% endjavascripts %}

{% endblock %}