{% extends 'base.html.twig' %}

{% block title %} QuasarApp-UMD {% endblock %}

{% block body %}
  <div id="q-app">
      <q-layout view="lHh Lpr fff">
        <q-layout-header>
          <q-toolbar color="dark" text-color="white">
            <q-btn flat dense @click="drawerState = !drawerState" icon="menu"></q-btn>
            <toolbar-title></toolbar-title>
            Right Module
          </q-toolbar>
        </q-layout-header>

        <q-layout-drawer
          v-model="drawerState"
          :content-class="$q.theme === 'mat' ? 'bg-amber-10' : null">
          <q-list no-border link inset-delimiter>
            <q-list-header> </q-list-header>
            <q-item @click.native="launch('#')">
              <q-item-side icon="fas fa-graduation-cap"></q-item-side>
              <q-item-main label="Home" sublabel=""></q-item-main>
            </q-item>
            <q-item @click.native="launch('#')">
              <q-item-side icon="fas fa-comments"></q-item-side>
              <q-item-main label="How we work" sublabel=""></q-item-main>
            </q-item>
            <q-item @click.native="launch('#')">
              <q-item-side icon="far fa-clipboard"></q-item-side>
              <q-item-main label="About us" sublabel=""></q-item-main>
            </q-item>
            <q-item @click.native="launch('#')">
              <q-item-side icon="fab fa-twitter"></q-item-side>
              <q-item-main label="Contact Us" sublabel=""></q-item-main>
            </q-item>
          </q-list>       
        </q-layout-drawer>

      <q-page-container>
        <my-page 
        :editorModel="editorModel" 
        :ratingModel="ratingModel"
        :progressBuffer="progressBuffer"
        :buffer="buffer"
        :visible="visible"
        :simple="simple"
        :stars="stars"></my-page>
        {% include 'quasar_components/components.html.twig' %}

      </q-page-container>
    </q-layout>

    

  </div> {# End of q-app #} 

{% endblock %}

{% block javascripts %}

  {{- parent() -}}

  {% javascripts '@AppBundle/Resources/app/backoffice/main.js' %}                         
      <script src="{{ asset_url }}"></script>
  {% endjavascripts %}

{% endblock %}